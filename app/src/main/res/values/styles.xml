<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">@dimen/lateral_margin</item>
        <item name="android:layout_marginEnd">@dimen/lateral_margin</item>
        <item name="android:layout_marginTop">@dimen/half_vertical_margin</item>
    </style>

    <style name="TextViewContent">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:layout_marginStart">@dimen/lateral_margin</item>
        <item name="android:layout_marginEnd">@dimen/lateral_margin</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

</resources>
